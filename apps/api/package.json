{
	"name": "@mutate/api",
	"version": "1.0.0",
	"description": "Backend API for the mutate",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc && cp -r src/db/migrations dist/db/",
		"build:tsup": "tsup src/index.ts --format esm --dts",
		"start": "node dist/index.js",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx src/db/migrate.ts",
		"db:migrate:prod": "node scripts/migrate.js",
		"db:studio": "drizzle-kit studio",
		"lint": "eslint src --ext .ts --fix",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@fastify/cors": "^10.0.1",
		"@fastify/helmet": "^12.0.1",
		"@fastify/jwt": "^9.0.1",
		"@fastify/multipart": "^9.0.1",
		"@fastify/rate-limit": "^10.1.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/node": "^22.9.1",
		"bcryptjs": "^2.4.3",
		"better-auth": "^1.3.7",
		"bull": "^4.16.3",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.36.4",
		"exceljs": "^4.4.0",
		"fastify": "^5.0.0",
		"fastify-plugin": "^5.0.1",
		"ioredis": "^5.4.1",
		"nanoid": "^5.0.9",
		"pino": "^9.4.0",
		"postgres": "^3.4.5",
		"typescript": "^5.6.3",
		"ulid": "^3.0.1",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"drizzle-kit": "^0.28.1",
		"eslint": "^9.15.0",
		"pino-pretty": "^13.1.1",
		"tsup": "^8.3.5",
		"tsx": "^4.19.2"
	}
}
